# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*{json, yaml, yml}]
indent_size = 2

[*{md, markdown}]
indent_size = 2

[*.py]
indent_size = 4

[*.toml]
indent_size = 4

[*.sh]
indent_size = 2